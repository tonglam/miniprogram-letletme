<view class="home">

  <view class="navBar">
    <van-nav-bar title="{{entryInfoData.entryName}}" left-text="GW{{gw}}" right-text="切换id"
      safe-area-inset-top="{{false}}" bind:click-left="" bind:click-right="onClickChangeEntry" />
  </view>

  <view class="content">

    <view class="index">




      <view class="img">
        <image class="begbeg" src="/images/duck4tiger.jpg" mode="aspectFit"></image>
      </view>

      <view class="info2">
        <text>距离虎年还有</text>
      </view>

      <view class="countDown2">
        <van-count-down use-slot time="{{tigerTime}}" bind:change="onChangeTigerTime" bind:finish="onFinish">
          <text class="item">{{tigerTimeData.days}}天</text>
          <text class="item">{{tigerTimeData.hours}}时</text>
          <text class="item">{{tigerTimeData.minutes}}分</text>
          <text class="item">{{tigerTimeData.seconds}}秒</text>
        </van-count-down>
      </view>












      <view class="img">
        <image class="begbeg" src="/images/hi.jpg" mode="aspectFit"></image>
      </view>

      <view class="info">
        <text>GW{{nextGw}}\n\ndeadline: {{deadline}}</text>
      </view>

      <view class="countDown">
        <van-count-down use-slot time="{{time}}" bind:change="onChange" bind:finish="onFinish">
          <text class="item">{{timeData.days}}天</text>
          <text class="item">{{timeData.hours}}时</text>
          <text class="item">{{timeData.minutes}}分</text>
          <text class="item">{{timeData.seconds}}秒</text>
        </van-count-down>
      </view>

      <view class="bottom">
        <van-row>
          <van-transition show="{{true}}" custom-class="block">
            这破游戏
          </van-transition>
        </van-row>
      </view>

    </view>

    <view class="fixture">
      <van-cell-group title="GW{{nextGw}} - 赛程">
        <block wx:for="{{fixtureList}}" wx:for-item="data" wx:key="index">
          <van-cell title="{{data.teamShortName}} vs {{data.againstTeamShortName}}" value="{{data.kickoffTime}}" is-link
            url="/pages/stat/record/record?title={{data.teamName}} vs {{data.againstTeamName}}&&teamId={{data.teamId}}&&againstId={{data.againstTeamId}}" />
        </block>
      </van-cell-group>
    </view>

  </view>

  <view class="bottemNavBar">
    <bottomNavBar active="home"></bottomNavBar>
  </view>

  <van-toast id="van-toast" />

</view>